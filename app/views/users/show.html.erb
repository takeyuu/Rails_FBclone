<h1><%= @user.name %>のページ</h1>
<% if @user.icon_image? %>
  <%= image_tag @user.icon_image.icon.url %>
<% else %>
  <%= image_tag "default_icon.jpg", size: '100x100' %>
<% end %>
<%= link_to 'ユーザー編集', edit_user_path(@user.id) %>
<%= link_to 'ログアウト', session_path(@user.id),
    method: :delete, data: { confirm: 'ログアウトしてよろしいですか？'} %>
